<% content_for(:title, t('.title')) %>
<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold">ユーザー登録</h1>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <div class="form-control">
          <%= form_with model: @user, local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
            <%= f.email_field :email, class: 'input input-bordered' %>
            <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
            <%= f.password_field :password, class: 'input input-bordered' %>
            <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-bold mb-2' %>
            <%= f.password_field :password_confirmation, class: 'input input-bordered' %>
            <div class="flex justify-center mt-4">
              <%= f.submit "登録", class: 'btn btn-primary' %>
            </div>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
