<%= search_form_for @q, url: url do |f| %>
  <div class="join">
    <div>
      <div>
        <%= f.search_field :user_profile_name_or_user_profile_favorite_player_or_user_profile_position_or_user_profile_favorite_place_cont, placeholder: '検索ワード', class: 'input input-bordered join-item' %>
      </div>
    </div>
    <div>
      <%= f.collection_select :user_profile_favorite_soccer_activities_soccer_type_cont, FavoriteSoccerActivity.all, :soccer_type, :soccer_type, { include_blank: '種目' }, { class: 'select select-bordered join-item' } %>
    </div>
    <%= f.submit '検索', class: 'btn btn-neutral join-item'%>
  </div>
<% end %>