<div class="col-sm-12 col-lg-4 mb-3">
  <div id="user-id-<%= user.id %>">
    <div class="card">
      <div class="card-body">
        <ul class="list-inline">
          <li class="list-inline-item">
            <% if user.user_profile %>
              <%= image_tag user.user_profile.image.url, size: '100x100' %>
            <% else %>
              <%= image_tag 'image_placeholder.png', size: '100x100' %>
            <% end %>
          </li>          
          <li class="list-inline-item">
            <%= user.user_profile.name %>
          </li>
          <% if current_user.sent_chat_requests.exists?(receiver_id: user.id, status: 'pending') %>
            <%= button_to '承認', approve_chat_requests_path(user_id: user.id), method: :patch, class: 'btn btn-success' %>
          <% else %>
            <%= form_with(model: @chat_request, url: chat_requests_path) do |form| %>
              <%= form.hidden_field :receiver_id, value: user.id %>
              <%= form.submit '申請', class: 'btn btn-primary' %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>