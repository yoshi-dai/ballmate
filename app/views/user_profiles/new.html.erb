<%= form_with(model: @user_profile, url: user_profiles_path, method: :post) do |f| %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :favorite_player %>
    <%= f.text_field :favorite_player, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :position %>
    <%= f.text_field :position, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :role_in_team %>
    <%= f.text_field :role_in_team, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :age%>
    <%= f.text_field :age, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :favorite_place %>
    <%= f.text_field :favorite_place, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :active_area %>
    <%= f.text_field :active_area, class: "form-control" %>
  </div>

  

  <div class="form-group">
    <%= f.label :available_time %>
    <%= f.text_field :available_time, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :favorite_soccer_activities %>
    <%= f.collection_check_boxes :favorite_soccer_activity_ids, @favorite_soccer_activities, :id, :soccer_type %>
  </div>

  <div class="field">
    <%= f.label :equipment %>
    <%= f.collection_select :equipment, UserProfile::EQUIPMENT_CHOICES, :itself, :itself, {}, { multiple: true, size: UserProfile::EQUIPMENT_CHOICES.size } %>
  </div>

  <div class="field">
    <%= f.label :available_day_of_week %>EQUIPMENT_CHOICES
    <%= f.select :available_day_of_week, UserProfile::DAYS_OF_WEEK, {}, { multiple: true, size: UserProfile::DAYS_OF_WEEK.size } %>
  </div>




  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class='mt-3 mb-3'>
    <%= image_tag @user_profile.image.url,
                  id: 'preview',
                  size: '200x200' %>
  </div>


  <div class="form-group">
    <%= f.submit "Create Profile", class: "btn btn-primary" %>
  </div>

<% end %>