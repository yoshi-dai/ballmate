  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :favorite_player %>
    <%= f.text_field :favorite_player, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :position %>
    <%= f.text_field :position, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :role_in_team %>
    <%= f.text_field :role_in_team, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :age%>
    <%= f.number_field :age, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :favorite_place %>
    <%= f.text_field :favorite_place, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :active_area %>
    <%= f.text_field :active_area, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :available_time %>
    <%= f.select :available_time, options_for_select(UserProfile.available_times.keys.map { |key| [key.to_s.humanize, UserProfile.available_times[key]] }, current_user.user_profile&.available_time || "default_value"), {}, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :favorite_soccer_activities %>
    <%= f.collection_check_boxes :favorite_soccer_activity_ids, @favorite_soccer_activities, :id, :soccer_type %>
  </div>

  <div class="field">
    <%= f.label :soccer_equipments %>
    <%= f.collection_check_boxes :soccer_equipment_ids, @soccer_equipments, :id, :name %>
  </div>



  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class='mt-3 mb-3'>
    <%= image_tag @user_profile.image.url,
                  id: 'preview',
                  size: '200x200' %>
  </div>


  <div class="form-group">
    <%= f.submit "Create Profile", class: "btn btn-primary" %>
  </div>