  <div class='chat chat-start' id="message-<%= message.id %>">
    <div>
      <div class="chat-header">
        <p><%= "#{message.user.user_profile.name}" %></p>
      </div>
      <div class="indicator">
        <div class='chat-bubble chat-bubble-primary'>
          <div class='message'>
            <%= simple_format(message.text) %>
          </div>
        </div>
      </div>
    </div>
  </div>
