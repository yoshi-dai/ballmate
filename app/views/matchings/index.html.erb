<% content_for(:title, t('.title')) %>
<div class="min-h-screen container mx-auto">
  <div class="overflow-x-auto">
    <div class="ml-3">
      <%= render 'matchings/search', q: @q, url: (action_name == 'index' ? matchings_path : send("#{action_name}_path")) %>
    </div>
    <table class="table">
      <div class="divider"></div>
      <tbody>
        <% if @matchings.present? %>
          <% @matchings.each_slice(2) do |matching_pair| %>
            <tr class='grid grid-cols-2 grid-rows-2'>
              <% matching_pair.each do |matching| %>
                <td class='align-top col-span-2 row-span-1 md:col-span-1 md:row-span-2'>
                  <%= render matching %>
                </td>
              <% end %>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td>
              <p class="text-2xl">マッチングは存在しません。</p>
            </td>
          </tr>
        <% end %>
      </tbody>
      <%= paginate @matchings %>
    </table>
  </div>
</div>
