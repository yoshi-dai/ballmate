<div class="container h-screen flex-grow bg-base mt-10">
  <div class="flex justify-center">
    <div class="items-center bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h1 class='text-lg'>ログイン</h1>
      <%= form_for :user_session, url: login_path do |f| %>
        <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>

        <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>
        
        <div class="mb-4">
          <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <%= f.email_field :email, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-white leading-tight focus:outline-none focus:shadow-outline' %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <%= f.password_field :password, class: 'rounded w-full py-2 px-3 leading-tight focus:outline-none' %>
        </div>
        <div class="flex justify-center">
          <%= f.submit "ログイン", class: 'btn btn-primary ' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
